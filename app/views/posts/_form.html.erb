<%= form_for @post, :html => { :class => "form-horizontal post", :remote=>true } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'please enter your url here', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :base_url, :class => 'form-control', :required => true, :placeholder=> "https://www.google.com" %>
    </div>
    <%=f.error_span(:base_url) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "SHORTERN", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
<%if !@short_url.nil? %>
<div class="shorted">
  <h4>Here your short URL</h4>
  <h3> <a href="<%=new_url(@short_url.short_url)%>" target="_blank"><%=new_url(@short_url.short_url)%></h3>
</div>
<%end%>